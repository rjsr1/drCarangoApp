<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="doutor.carangoapp.gui.IntroducaoActivity">

    <ImageView
        android:id="@+id/iv_logo_inicial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:contentDescription="logo"
        android:paddingBottom="60dp"
        android:src="@drawable/logo_intro" />

    <Button
        style="@style/btn_introducao_motorista"
        android:id="@+id/btn_motorista"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:padding="15dp"
        android:layout_below="@id/iv_logo_inicial"
        android:text="@string/txt_intro_usuario"
        android:layout_centerHorizontal="true" />

    <Button
        style="@style/btn_introducao_oficina"
        android:id="@+id/btn_oficina"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:padding="15dp"
        android:layout_below="@id/btn_motorista"
        android:text="@string/txt_intro_oficina"
        android:layout_centerHorizontal="true" />
