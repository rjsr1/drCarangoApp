<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="doutor.carangoapp.gui.IntroducaoActivity">

    <ImageView
        android:id="@+id/iv_logo_inicial"
        android:layout_width="205dp"
        android:layout_height="188dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="111dp"
        android:contentDescription="logo"
        android:src="@drawable/logo" />

    <ImageView
        android:id="@+id/iv_carango"
        android:layout_width="369dp"
        android:layout_height="81dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="100dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="332dp"
        android:src="@drawable/doutorcarango" />

    <ImageView
        android:id="@+id/iv_face_icon"
        android:layout_width="326dp"
        android:layout_height="73dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="255dp"
        android:src="@drawable/login_fb" />

    <TextView
        android:id="@+id/tv_fazer_cadastro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="167dp"
        android:text="crie sua conta"
        android:textColor="#083863"
        android:textSize="30sp" />


</RelativeLayout>
